@model LearnDotNetCore.ViewModels.RegisterViewModel;
@{
    ViewBag.Title = "User Registration";

}

<div class="row">
    <div class="col-md-12">
        <form class="mt-3" method="post">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Email"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Password"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Password" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="ConfirmPassword"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="ConfirmPassword" />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>
            <div>
                <button type="submit" class="btn-primary">Register</button>
            </div>

        </form>
    </div>
</div>