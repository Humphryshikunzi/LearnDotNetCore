@model LearnDotNetCore.ViewModels.EmployeeDTO
@{ 
    var photoPath = "~/Images/" + (Model.Employee.PhotoPath ?? "IoT_Telecommunication.jpeg");
}
<title>@Model.PageTitle</title>
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h3>Details for employee </h3>
            </div>
            <div class="card-body text-center">
                <h2>Customer infor</h2>
                <img class="card-img-top"
                     asp-append-version="true"
                     src="@photoPath"
                     alt="Alternate Text" />
                <h2>Id @Model.Employee.Id</h2>
                <h3>Name  @Model.Employee.FirstName</h3>
                <h3>Email @Model.Employee.Email</h3>
                <h3>Department @Model.Employee.Department</h3>

            </div>
            <div class="card-footer  text-center">
                <a asp-controller="Home" asp-action="Employees" class="btn btn-primary">Back</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id=@Model.Employee.Id class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>
