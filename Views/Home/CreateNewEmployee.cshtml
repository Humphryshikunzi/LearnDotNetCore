@model LearnDotNetCore.ViewModels.EmployeeCreateViewModel
    <form enctype="multipart/form-data" asp-controller="Home" asp-action="CreateNewEmployee" class="mt-3" method="post">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="FirstName"></label>
            <div class="col-sm-10">
                <input class="form-control" placeholder="Name" asp-for="FirstName" />
                <span class="text-danger" asp-validation-for="FirstName"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Email"></label>
            <div class="col-sm-10">
                <input class="form-control" placeholder="Email" asp-for="Email" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Department"></label>
            <div class="col-sm-10">
                <select class="custom-select mr-sm-2" asp-for="Department" asp-items="Html.GetEnumSelectList<Department>()">
                    <option value="">Please select Department</option>
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Photo"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input class="form-control custom-file-input" asp-for="Photo" />
                    <label class="custom-file-label">Choose file...</label>
                </div>
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div>
            <button type="submit" class="btn-primary">Submit</button>
        </div>
        @section Scripts{
            <script>
                $(document).ready(function(){
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                }
            </script>
         }
    </form>